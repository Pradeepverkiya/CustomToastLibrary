<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <Button
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="errorTextColor"
        android:layout_height="wrap_content"
        android:text="Error Text Color Toast"
        android:background="@color/errorColor"
        android:textColor="@color/defaultTextColor"
        android:padding="10dp"
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:onClick="infocolorText"
        android:text="infoColor Text Color Toast"
        android:background="@color/infoColor"
        android:textColor="@color/defaultTextColor"
        android:padding="10dp"
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:onClick="successColorText"
        android:text="successColor Text Color Toast"
        android:background="@color/successColor"
        android:textColor="@color/defaultTextColor"
        android:padding="10dp"
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:onClick="warningColorText"
        android:text="warningColor Text Color Toast"
        android:background="@color/warningColor"
        android:textColor="@color/defaultTextColor"
        android:padding="10dp"
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="normalColorText"
        android:layout_height="wrap_content"
        android:text="normalColor Text Color Toast"
        android:background="@color/normalColor"
        android:textColor="@color/defaultTextColor"
        android:padding="10dp"
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal"/>



</LinearLayout>